<%- include('../header') %>
  <div class="table-responsive"
    style="position: absolute; z-index: -1; display: inline-block;width: 1100px; margin-left: 35px; width: 75%; ">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <a href="/create-account" class="btn btn-primary">thêm mới tài khoản quản trị</a>
  </div>
  <table class="table table-hover mt-5">
    <thead>
      <tr>
        <th>id</th>
        <th>Tên QTV</th>
        <th>email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(item,key){%>
        <tr>
          <td>
            <%=(key+1)%>
          </td>
          <td>
            <%= item.name%>
          </td>
          <td>
            <%= item.email %>
          </td>
          <td>
            <a href="/delete-account/<%= item.id%>" class="btn btn-danger">xóa</a>
            <a href="/update-account/<%= item.id%>" class="btn btn-warning">sửa</a>
          </td>
        </tr>

        <% }) %>


    </tbody>
  </table>
  </div>
  </div>
  <%- include('../footer') %>